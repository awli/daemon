mixin navigation
  .container-fluid(ng-controller='NavCtrl')
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#') Daemon
      .collapse.navbar-collapse
        ul.nav.navbar-nav.navbar-right
          li(ng-class="getClass('/dashboard')")
            a(href='#/dashboard') Dashboard
          li(ng-class="getClass('/edit')")
            a(href='#/edit') Edit
          li(ng-class="getClass('/debug')")
            a(href='#/debug') Debug
          li(ng-class="getClass('/configure')")
            a(href='#', ng-click='openConfigureModal()' ) Configure


.navbar.navbar-main.navbar-fixed-top(role='navigation')
  +navigation()

.navbar.navbar-main.navbar-fixed-spacer(role='navigation')
  +navigation()
